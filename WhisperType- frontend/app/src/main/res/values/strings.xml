    <string name="app_name">WhisperType</string>
    
    <!-- Accessibility Service -->
    <string name="accessibility_service_label">WhisperType Voice Input</string>
    <string name="accessibility_service_description">Provides system-wide voice input via a floating overlay. Enable this service and assign it to the accessibility shortcut to use voice typing in any app.</string>
    <string name="accessibility_service_summary">Voice input overlay for any text field</string>
    
    <!-- Main Activity -->
    <string name="welcome_title">Welcome to WhisperType</string>
    <string name="welcome_description">WhisperType lets you type using your voice in any app. Just focus on a text field, trigger the accessibility shortcut, and speak!</string>
    
    <string name="setup_title">Setup Required</string>
    <string name="step_accessibility">1. Enable Accessibility Service</string>
    <string name="step_accessibility_desc">Allow WhisperType to insert text into other apps</string>
    <string name="step_overlay">2. Grant Overlay Permission</string>
    <string name="step_overlay_desc">Allow the floating mic button to appear</string>
    <string name="step_microphone">3. Grant Microphone Permission</string>
    <string name="step_microphone_desc">Allow voice recording for speech-to-text</string>
    <string name="step_shortcut">4. Set Up Accessibility Shortcut</string>
    <string name="step_shortcut_desc">Long press volume buttons or use the accessibility button</string>
    
