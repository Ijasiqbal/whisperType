<?xml version="1.0" encoding="utf-8"?>
<!--
OVERLAY MIC VIEW LAYOUT - iOS Style Glassmorphism

This is the floating overlay that appears when the accessibility shortcut is triggered.

Design principles:
1. iOS-style glassmorphism with translucent background
2. Pulsing ring animation during recording
3. Animated success/error feedback
4. Compact, non-focusable, draggable

The layout consists of:
- Frosted glass container with gradient border
- Animated recording ring behind mic button
- Mic button with glass effect
- Status text and preview
- Close button with improved touch target
-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overlay_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Main container card - iOS glass effect -->
    <LinearLayout
        android:id="@+id/overlay_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/overlay_background_ios"
        android:padding="20dp"
        android:elevation="12dp">

        <!-- Close button (top right corner) - improved touch target -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            
            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                android:contentDescription="Close overlay"
                android:scaleType="centerInside" />
        </FrameLayout>

        <!-- Mic button wrapper with recording ring -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <!-- Pulsing recording ring (behind button, animated) -->
            <View
                android:id="@+id/recording_ring"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_gravity="center"
                android:background="@drawable/recording_ring"
                android:alpha="0"
                android:visibility="gone" />

            <!-- Second ring for layered pulse effect -->
            <View
                android:id="@+id/recording_ring_outer"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_gravity="center"
                android:background="@drawable/recording_ring"
                android:alpha="0"
                android:visibility="gone" />

            <!-- Mic button - glass effect -->
            <FrameLayout
                android:id="@+id/mic_button_container"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:background="@drawable/mic_button_glass">

                <!-- Mic icon -->
                <ImageView
                    android:id="@+id/ic_mic"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_mic"
                    android:contentDescription="Microphone button" />

                <!-- Success checkmark icon (hidden by default) -->
                <ImageView
                    android:id="@+id/ic_success"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"
                    android:contentDescription="Success"
                    android:visibility="gone"
                    android:scaleX="0"
                    android:scaleY="0" />

                <!-- Loading indicator for processing/transcribing state -->
                <ProgressBar
                    android:id="@+id/progress_indicator"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="#A78BFA"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </FrameLayout>
        </FrameLayout>

        <!-- Status text indicator -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/overlay_ready"
            android:textColor="@color/overlay_text"
            android:textSize="13sp"
            android:textStyle="bold"
            android:maxWidth="140dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="2" />

        <!-- Recognized text preview (shows partial results) -->
        <TextView
            android:id="@+id/tv_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/overlay_text"
            android:textSize="11sp"
            android:alpha="0.85"
            android:maxWidth="160dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="3"
            android:visibility="gone"
            tools:text="Hello world..."
            tools:visibility="visible" />

        <!-- Copy to Clipboard button (shown when no text field is focused) -->
        <Button
            android:id="@+id/btn_copy"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="@string/btn_copy_clipboard"
            android:textColor="@color/on_primary"
            android:textSize="12sp"
            android:background="@drawable/copy_button_background"
            android:textAllCaps="false"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</FrameLayout>
