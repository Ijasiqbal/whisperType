<?xml version="1.0" encoding="utf-8"?>
<!--
AUTO-SEND PILL OVERLAY - Indicator pill shown above main overlay

This is a separate overlay that appears ABOVE the main overlay pill when auto-send is enabled.
Shows "Auto-send" text with a close button to disable the feature.

Design:
- Compact horizontal pill with amber/orange accent
- Lightning bolt icon + text + close button
- Matches Liquid Glass aesthetic
- Positioned above main overlay
-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/autosend_pill_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <!-- Auto-send pill container -->
    <LinearLayout
        android:id="@+id/autosend_pill_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="36dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/autosend_pill_background"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:elevation="10dp">

        <!-- Lightning bolt icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš¡"
            android:textSize="16sp"
            android:layout_marginEnd="6dp" />

        <!-- Auto-send label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto-send"
            android:textColor="#F0FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <!-- Close button -->
        <ImageButton
            android:id="@+id/btn_close_autosend"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:contentDescription="Disable auto-send"
            android:scaleType="centerInside"
            android:tint="#F0FFFFFF"
            android:alpha="0.9" />

    </LinearLayout>

</FrameLayout>
