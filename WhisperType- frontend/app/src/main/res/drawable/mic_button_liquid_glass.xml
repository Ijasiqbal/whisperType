<?xml version="1.0" encoding="utf-8"?>
<!--
Liquid Glass Mic Button - Circular glass button
Used for the mic/action button in the pill overlay
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow -->
    <item
        android:top="-2dp"
        android:bottom="-2dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape android:shape="oval">
            <solid android:color="#208B5CF6" />
        </shape>
    </item>
    
    <!-- Border -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="24dp"
                android:startColor="#50FFFFFF"
                android:endColor="#20FFFFFF" />
        </shape>
    </item>
    
    <!-- Main fill -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="oval">
            <solid android:color="#D08B5CF6" />
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:startColor="#30FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
        </shape>
    </item>
    
</layer-list>
