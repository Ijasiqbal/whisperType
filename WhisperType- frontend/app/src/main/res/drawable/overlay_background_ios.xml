<?xml version="1.0" encoding="utf-8"?>
<!--
iOS-style glassmorphism overlay background
- More translucent with blur-like appearance
- Subtle white gradient border
- Larger blur radius effect simulation
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow/blur simulation -->
    <item
        android:top="-2dp"
        android:bottom="-2dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#10FFFFFF" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <!-- Subtle border with frosted edge effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#50FFFFFF"
                android:endColor="#20FFFFFF"
                android:angle="135" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Main glass background - darker, more translucent -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#CC1A1F2E" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Inner highlight for depth -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#15FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
