<?xml version="1.0" encoding="utf-8"?>
<!-- Warning dialog background - Opaque dark glass effect -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Solid opaque background to prevent transparency overlap -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#1A1A2E" />
        </shape>
    </item>

    <!-- Subtle glass highlight at top -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="270"
                android:startColor="#15FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF"
                android:centerY="0.3" />
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#30FFFFFF" />
        </shape>
    </item>

</layer-list>
