<?xml version="1.0" encoding="utf-8"?>
<!--
iOS-style glass mic button - listening/active state
Brighter, more vibrant gradient indicating active recording
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow effect -->
    <item
        android:top="-4dp"
        android:bottom="-4dp"
        android:left="-4dp"
        android:right="-4dp">
        <shape android:shape="oval">
            <solid android:color="#306366F1" />
        </shape>
    </item>
    <!-- Base gradient - brighter for active state -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="40dp"
                android:startColor="#8B5CF6"
                android:endColor="#6366F1" />
        </shape>
    </item>
    <!-- Inner highlight -->
    <item
        android:top="2dp"
        android:left="6dp"
        android:right="6dp"
        android:bottom="40dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:startColor="#50FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
        </shape>
    </item>
</layer-list>
