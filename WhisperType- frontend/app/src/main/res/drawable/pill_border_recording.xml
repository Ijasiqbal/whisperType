<?xml version="1.0" encoding="utf-8"?>
<!--
Liquid Glass Pill - Recording State Border
Violet/purple accent glow for active recording
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer violet glow - more prominent during recording -->
    <item
        android:top="-4dp"
        android:bottom="-4dp"
        android:left="-4dp"
        android:right="-4dp">
        <shape android:shape="rectangle">
            <solid android:color="#408B5CF6" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    
    <!-- Border gradient with violet tint -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#608B5CF6"
                android:endColor="#308B5CF6"
                android:angle="135" />
            <corners android:radius="26dp" />
        </shape>
    </item>
    
    <!-- Main glass fill -->
    <item
        android:top="1.5dp"
        android:bottom="1.5dp"
        android:left="1.5dp"
        android:right="1.5dp">
        <shape android:shape="rectangle">
            <solid android:color="#B31A1F2E" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item
        android:top="1.5dp"
        android:bottom="1.5dp"
        android:left="1.5dp"
        android:right="1.5dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#158B5CF6"
                android:centerColor="#08FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
</layer-list>
