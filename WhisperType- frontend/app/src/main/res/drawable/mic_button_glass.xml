<?xml version="1.0" encoding="utf-8"?>
<!--
iOS-style glass mic button background
Subtle gradient with inner glow effect
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="40dp"
                android:startColor="#7C3AED"
                android:endColor="#6366F1" />
        </shape>
    </item>
    <!-- Inner highlight for 3D effect -->
    <item
        android:top="2dp"
        android:left="6dp"
        android:right="6dp"
        android:bottom="40dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
        </shape>
    </item>
</layer-list>
